
page {
	height: 100%;
	background-color: #f2f2f2;
}

.msg-box {
  height: 65vw;
  color: #ffffff;
}
.msg-box .msg-box-data {
  background: #42424283;
  height: 65vw;
}
.person-msg-smbox {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-top: 20rpx;
}
.person-msg-smbox image {
  width: 18vw;
  height: 18vw;
  border-radius: 2vw;
  margin-left: 4vw;
  border: 0.15rem solid #ffffff;
}
.person-msg-smbox .person-msg-name {
  margin-left: 3vw;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.person-msg-smbox .person-msg-name .person-msg-name-top {
  font-weight: 800;
  font-size: 1rem;
}
.person-msg-smbox .person-msg-name .person-msg-name-bottom {
  font-size: 0.68rem;
  color: #ffffff;
}
.person-msg-smbox .person-msg-own {
  background-color: #aaa8ac;
  height: 4vw;
  font-size: 0.6rem;
  border-radius: 3vw;
  width: 20vw;
  margin-top: 2vw;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.person-msg-smbox .person-msg-own text {
  vertical-align: middle;
  color: #ffffff;
  font-weight: 500;
  text-align: center;
}
.person-msg-smbox .person-msg-own .person_iocn {
  color: #cfcccc;
  font-weight: 600;
  display: inline-block;
  vertical-align: middle;
}
.person-msg-smbox .person-edit {
  border: 0.05rem solid #ffffff;
  padding: 1vw 2vw;
  height: 8vw;
  border-radius: 1vw;
  font-size: 0.8rem;
  font-weight: 500;
  vertical-align: middle;
  margin-top: 5vw;
  margin-right: 4vw;
  color: #ffffff;
}
.person-act-box {
  margin: 4vw;
}
.person-act-box .user-msg-text {
  font-size: 0.85rem;
  margin-bottom: 2vw;
}
.person-act-box .user-msg-data {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 10vw;
  font-size: 1rem;
  font-weight: 540;
}
.person-act-box .user-msg-data view {
  margin-right: 4vw;
}
.swiper-box {
  height: 50vh;
}

